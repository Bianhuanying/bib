@Article{yuan2020upwind,
	author = {Y. Yuan, and H. Song, and C. Li, and T. Sun, },
	title = {{An Upwind Mixed Finite Element Method on Changing Meshes for Positive Semi-Definite Oil-Water Displacement of Darcy-Forchheimer Flow in Porous Media},
	journal = {Advances in Applied Mathematics and Mechanics}},
	year = {2020},
	volume = {12},
	number = {5},
	pages = {1196--1223},
	abstract = {	
