@article{egorov2003stability,
	author = {Egorov, A.G. and Dautov, R.Z. and Nieber, J.L. and Sheshukov, A.Y.},
	title = {Stability analysis of gravity-driven infiltrating flow},
	journal = {Water Resources Research},
	volume = {39},
	number = {9},
	pages = {},
	keywords = {Richards' equation, gravity-driven flow, dynamic capillary pressure, traveling wave solution, stability analysis},
	doi = {10.1029/2002WR001886},
	url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1029/2002WR001886},
